<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1F1E8"
    android:orientation="vertical">

    <TextView
        android:id="@+id/texItemName"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="121dp"
        android:layout_marginTop="97dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="615dp"
        android:gravity="center"
        android:text="Apple"
        android:textColor="#81B214"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imgItem"
        android:layout_width="248dp"
        android:layout_height="215dp"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="104dp"
        android:layout_marginTop="202dp"
        android:layout_marginEnd="97dp"
        android:layout_marginBottom="383dp"
        android:baselineAligned="false" />

    <TextView
        android:id="@+id/txtItemPrice"
        android:layout_width="104dp"
        android:layout_height="47dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="315dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="55dp"
        android:gravity="center"
        android:text="Rs.500.00"
        android:textAlignment="viewEnd"
        android:textColor="#206A5D"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textCat"
        android:layout_width="305dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="107dp"
        android:layout_marginBottom="717dp"
        android:text="Category"
        android:textAlignment="viewStart"
        android:textColor="#206A5D"
        android:textColorLink="#206A5D"
        android:textSize="34sp" />

    <EditText
        android:id="@+id/textDescription"
        android:layout_width="384dp"
        android:layout_height="227dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="136dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:textAlignment="viewStart"
        android:textColor="#206A5D" />

    <Button
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="336dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="738dp"
        android:background="#00FFFFFF"
        android:text="Close"
        android:textColor="#206A5D" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="176dp"
        android:layout_marginBottom="55dp"
        android:background="#206A5D"
        android:text="Add to List"
        android:textColor="#F1F1E8"
        android:textColorHighlight="#FFFFFF"
        android:textColorLink="#FFFFFF" />


</RelativeLayout>